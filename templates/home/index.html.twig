{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            
            {% for article in articles %}
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                            {{ article.getTitle() }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ article.getSubtitle() }}
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by <a href="#">{{ article.getAuthor() }}</a>
                        on {{ article.getCreatedAt()|date(null, "Europe/Paris") }}
                    </p>
                </div>
                <hr>
            {% endfor %}
            <!-- Pager -->
            <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>
{% endblock %}
